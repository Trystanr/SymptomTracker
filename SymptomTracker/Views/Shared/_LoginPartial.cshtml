@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="dropdown">
        <a class="nav-link text-light dropdown-toggle" id="dropdownMenuButton" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Welcome @User.FindFirst("firstname").Value</a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <h6 class="dropdown-header">Account</h6>
            <!-- <a class="dropdown-item text-white" href="#">Action</a> -->
            <div class="dropdown-divider"></div>
            <form class="form-inline" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="dropdown-item" id="btn-logout">Logout</button>
            </form>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-controller="Account"
           asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" asp-controller="Account"
           asp-action="Register">Register</a>
    </li>
}